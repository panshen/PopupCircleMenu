<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp">

        <com.panshen.xps.popupcirclemenu.PopupCircleView
            android:id="@+id/PopupMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:pc_anim_duration="200"
            app:pc_radius="100dp">

            <com.panshen.xps.popupcirclemenu.PopupButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:pb_color="#ffffff"
                app:pb_color_checked="#FFEBEBEB" />

            <com.panshen.xps.popupcirclemenu.PopupButton
                android:id="@+id/pb_like"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:pb_background="@drawable/good"
                app:pb_background_checked="@drawable/good_re"
                app:pb_checkable="true"
                app:pb_color_checked="#ff0000"
                app:pb_text_off="取消赞"
                app:pb_text_on="点赞" />

            <com.panshen.xps.popupcirclemenu.PopupButton
                android:id="@+id/pb_share"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:pb_background="@drawable/share"
                app:pb_background_checked="@drawable/share_re"
                app:pb_checkable="false"
                app:pb_color="#ffffff"
                app:pb_color_checked="#ff0000"
                app:pb_text_off="分享"
                app:pb_text_on="分享" />

            <com.panshen.xps.popupcirclemenu.PopupButton
                android:id="@+id/pb_favorite"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:pb_background="@drawable/favorite"
                app:pb_background_checked="@drawable/favorite_re"
                app:pb_checkable="true"
                app:pb_color="#ffffff"
                app:pb_color_checked="#ff0000"
                app:pb_text_off="取消收藏"
                app:pb_text_on="收藏" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg" />

        </com.panshen.xps.popupcirclemenu.PopupCircleView>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <com.panshen.xps.popupcirclemenu.PopupCircleView
            android:id="@+id/PopupMenu_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:pc_anim_duration="200"
            app:pc_open_direction="RIGHT"
            app:pc_radius="80dp">

            <com.panshen.xps.popupcirclemenu.PopupButton
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:pb_color="#ffffff"
                app:pb_color_checked="#FFEBEBEB" />

            <com.panshen.xps.popupcirclemenu.PopupButton
                android:id="@+id/pb_like_dot"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:pb_background="@drawable/good"
                app:pb_background_checked="@drawable/good_re"

                app:pb_color="#ffffff"
                app:pb_color_checked="#ff0000" />

            <com.panshen.xps.popupcirclemenu.PopupButton
                android:id="@+id/pb_share_dot"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:pb_background="@drawable/share"
                app:pb_background_checked="@drawable/share_re"
                app:pb_checkable="true"
                app:pb_color="#ffffff"
                app:pb_color_checked="#ff0000" />

            <com.panshen.xps.popupcirclemenu.PopupButton
                android:id="@+id/pb_favorite_dot"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:pb_background="@drawable/favorite"
                app:pb_background_checked="@drawable/favorite_re"
                app:pb_checkable="true"
                app:pb_color="#ffffff"
                app:pb_color_checked="#ff0000" />

            <ImageView
                android:id="@+id/iv_dot"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:padding="12dp"
                android:src="@drawable/dots" />

        </com.panshen.xps.popupcirclemenu.PopupCircleView>

    </RelativeLayout>

</LinearLayout>



